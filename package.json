{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "Ecommerce Backend - Pre-entrega 1",
  "main": "src/app.js",
  "scripts": {
    "start": "npm run lint:check && node src/app.js",
    "dev": "npm run lint:check && nodemon src/app.js",
    "lint": "eslint \"src/**/*.js\"",
    "lint:check": "eslint \"src/**/*.js\" --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "check": "npm run lint:check && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "precommit": "npm run check",
    "test": "node tests/professional.test.js",
    "test:watch": "nodemon tests/professional.test.js",
    "test:all": "npm run check && npm run test"
  },
  "keywords": [
    "ecommerce",
    "backend",
    "authentication",
    "authorization",
    "passport"
  ],
  "author": "Angie Somma",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mongoose": "^8.0.0",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.1.2",
    "axios": "^1.12.2",
    "colors": "^1.4.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
