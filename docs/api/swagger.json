{
  "openapi": "3.0.0",
  "info": {
    "title": "üõçÔ∏è Ecommerce Backend API - Entrega Final",
    "version": "3.0.0",
    "description": "API REST con arquitectura profesional: Repository Pattern, DTOs, autorizaci√≥n granular, sistema de tickets y recuperaci√≥n de contrase√±as con expiraci√≥n.",
    "contact": {
      "name": "Angie Somma",
      "email": "angie.somma@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Servidor de desarrollo"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "üîê Autenticaci√≥n JWT, registro, login y recuperaci√≥n con expiraci√≥n de 1 hora"
    },
    {
      "name": "Products",
      "description": "üõçÔ∏è CRUD de productos - Solo admin puede modificar"
    },
    {
      "name": "Carts",
      "description": "üõí Gesti√≥n de carritos - Solo usuarios (no admins)"
    },
    {
      "name": "Users",
      "description": "üë• Gesti√≥n de usuarios y perfiles con DTOs seguros"
    },
    {
      "name": "Tickets",
      "description": "üé´ Sistema robusto de tickets de compra"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Token JWT de acceso. Formato: Authorization: Bearer <token>"
      }
    },
    "schemas": {
      "UserDTO": {
        "type": "object",
        "description": "DTO seguro del usuario sin informaci√≥n sensible",
        "properties": {
          "id": {
            "type": "string",
            "example": "64a1b2c3d4e5f6789012345"
          },
          "firstName": {
            "type": "string",
            "example": "Juan"
          },
          "lastName": {
            "type": "string",
            "example": "P√©rez"
          },
          "fullName": {
            "type": "string",
            "example": "Juan P√©rez"
          },
          "email": {
            "type": "string",
            "example": "juan@example.com"
          },
          "role": {
            "type": "string",
            "enum": [
              "user",
              "premium",
              "admin"
            ],
            "example": "user"
          },
          "isActive": {
            "type": "boolean",
            "example": true
          },
          "lastLogin": {
            "type": "string",
            "format": "date-time"
          },
          "permissions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": [
              "read:own-profile",
              "create:cart",
              "read:products"
            ]
          }
        }
      },
      "ProductDTO": {
        "type": "object",
        "description": "DTO de producto con informaci√≥n completa",
        "properties": {
          "id": {
            "type": "string",
            "example": "64a1b2c3d4e5f6789012345"
          },
          "title": {
            "type": "string",
            "example": "Smartphone Galaxy"
          },
          "description": {
            "type": "string",
            "example": "Smartphone de √∫ltima generaci√≥n"
          },
          "price": {
            "type": "number",
            "example": 599.99
          },
          "stock": {
            "type": "integer",
            "example": 50
          },
          "category": {
            "type": "string",
            "example": "electronics"
          },
          "code": {
            "type": "string",
            "example": "PROD-1640995200000"
          },
          "thumbnails": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "boolean",
            "example": true
          },
          "owner": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string",
                "example": "Admin User"
              },
              "email": {
                "type": "string",
                "example": "admin@example.com"
              }
            }
          }
        }
      },
      "CartDTO": {
        "type": "object",
        "description": "DTO de carrito con productos y totales calculados",
        "properties": {
          "id": {
            "type": "string",
            "example": "64a1b2c3d4e5f6789012345"
          },
          "products": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "product": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "title": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number"
                    },
                    "thumbnail": {
                      "type": "string"
                    },
                    "stock": {
                      "type": "integer"
                    }
                  }
                },
                "quantity": {
                  "type": "integer",
                  "example": 2
                },
                "subtotal": {
                  "type": "number",
                  "example": 1199.98
                }
              }
            }
          },
          "total": {
            "type": "number",
            "example": 1199.98
          },
          "totalItems": {
            "type": "integer",
            "example": 2
          },
          "status": {
            "type": "string",
            "example": "active"
          }
        }
      },
      "Ticket": {
        "type": "object",
        "description": "Ticket de compra robusto con informaci√≥n completa",
        "properties": {
          "code": {
            "type": "string",
            "example": "TICKET-1640995200000-ABC123"
          },
          "purchase_datetime": {
            "type": "string",
            "format": "date-time"
          },
          "amount": {
            "type": "number",
            "example": 1199.98
          },
          "purchaser": {
            "type": "string",
            "example": "user@example.com"
          },
          "products": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "product": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "price": {
                  "type": "number"
                },
                "quantity": {
                  "type": "integer"
                },
                "subtotal": {
                  "type": "number"
                }
              }
            }
          },
          "failedProducts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "product": {
                  "type": "string"
                },
                "requestedQuantity": {
                  "type": "integer"
                },
                "availableStock": {
                  "type": "integer"
                },
                "reason": {
                  "type": "string"
                }
              }
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "pending",
              "completed",
              "cancelled",
              "refunded"
            ]
          },
          "totals": {
            "type": "object",
            "properties": {
              "subtotal": {
                "type": "number"
              },
              "tax": {
                "type": "number"
              },
              "shipping": {
                "type": "number"
              },
              "total": {
                "type": "number"
              }
            }
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "error": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ValidationError": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResponse"
          },
          {
            "type": "object",
            "properties": {
              "statusCode": {
                "type": "integer",
                "example": 400
              },
              "details": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "field": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        ]
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Registrar nuevo usuario",
        "description": "Crea una nueva cuenta de usuario con validaciones robustas",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "first_name",
                  "last_name",
                  "email",
                  "age",
                  "password"
                ],
                "properties": {
                  "first_name": {
                    "type": "string",
                    "example": "Juan"
                  },
                  "last_name": {
                    "type": "string",
                    "example": "P√©rez"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "juan@example.com"
                  },
                  "age": {
                    "type": "integer",
                    "minimum": 18,
                    "example": 25
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "example": "MiPassword123!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "user": {
                          "$ref": "#/components/schemas/UserDTO"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          },
          "409": {
            "$ref": "#/components/responses/ConflictError"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Iniciar sesi√≥n",
        "description": "Autenticaci√≥n con email y contrase√±a, retorna JWT tokens",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "user": {
                          "$ref": "#/components/schemas/UserDTO"
                        },
                        "tokens": {
                          "type": "object",
                          "properties": {
                            "accessToken": {
                              "type": "string"
                            },
                            "refreshToken": {
                              "type": "string"
                            },
                            "expiresIn": {
                              "type": "string",
                              "example": "15m"
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/auth/current": {
      "get": {
        "tags": [
          "Authentication"
        ],
        "summary": "Informaci√≥n del usuario actual",
        "description": "Retorna informaci√≥n segura del usuario autenticado (DTO sin datos sensibles)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Informaci√≥n del usuario actual",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "user": {
                          "$ref": "#/components/schemas/UserDTO"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/auth/forgot-password": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Solicitar recuperaci√≥n de contrase√±a",
        "description": "Env√≠a email con token que expira en 1 hora",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email de recuperaci√≥n enviado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/reset-password": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Restablecer contrase√±a",
        "description": "Cambia contrase√±a usando token (debe ser diferente a la anterior)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "token",
                  "newPassword"
                ],
                "properties": {
                  "token": {
                    "type": "string"
                  },
                  "newPassword": {
                    "type": "string",
                    "minLength": 8
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/SuccessResponse"
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          }
        }
      }
    },
    "/api/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Obtener productos (p√∫blico)",
        "description": "Lista productos con filtros y paginaci√≥n",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "search",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "createdAt"
            }
          },
          {
            "name": "order",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "default": "desc"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de productos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "products": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ProductDTO"
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "current": {
                          "type": "integer"
                        },
                        "pages": {
                          "type": "integer"
                        },
                        "total": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Crear producto (solo admin)",
        "description": "Solo administradores pueden crear productos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "title",
                  "description",
                  "price",
                  "stock",
                  "category"
                ],
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Smartphone Galaxy"
                  },
                  "description": {
                    "type": "string",
                    "example": "Smartphone de √∫ltima generaci√≥n"
                  },
                  "price": {
                    "type": "number",
                    "example": 599.99
                  },
                  "stock": {
                    "type": "integer",
                    "example": 50
                  },
                  "category": {
                    "type": "string",
                    "example": "electronics"
                  },
                  "code": {
                    "type": "string",
                    "example": "PROD-GALAXY-001"
                  },
                  "thumbnails": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Producto creado",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "product": {
                          "$ref": "#/components/schemas/ProductDTO"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "403": {
            "$ref": "#/components/responses/ForbiddenError"
          }
        }
      }
    },
    "/api/carts": {
      "get": {
        "tags": [
          "Carts"
        ],
        "summary": "Obtener carrito del usuario",
        "description": "Solo usuarios autenticados (no admins) pueden acceder",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Carrito del usuario",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "cart": {
                          "$ref": "#/components/schemas/CartDTO"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "403": {
            "$ref": "#/components/responses/ForbiddenError"
          }
        }
      }
    },
    "/api/carts/product": {
      "post": {
        "tags": [
          "Carts"
        ],
        "summary": "Agregar producto al carrito",
        "description": "Solo usuarios (no admins) pueden agregar productos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "productId"
                ],
                "properties": {
                  "productId": {
                    "type": "string",
                    "example": "64a1b2c3d4e5f6789012345"
                  },
                  "quantity": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 100,
                    "default": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Producto agregado al carrito",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "cart": {
                          "$ref": "#/components/schemas/CartDTO"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "403": {
            "$ref": "#/components/responses/ForbiddenError"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        }
      }
    },
    "/api/carts/purchase": {
      "post": {
        "tags": [
          "Carts"
        ],
        "summary": "Procesar compra del carrito",
        "description": "Genera ticket robusto con manejo de stock y compras parciales",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Compra procesada (completa o parcial)",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "ticket": {
                          "$ref": "#/components/schemas/Ticket"
                        },
                        "failedProducts": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "product": {
                                "type": "string"
                              },
                              "requested": {
                                "type": "integer"
                              },
                              "available": {
                                "type": "integer"
                              }
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "SuccessResponse": {
        "description": "Operaci√≥n exitosa",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ApiResponse"
            }
          }
        }
      },
      "ValidationError": {
        "description": "Error de validaci√≥n",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "UnauthorizedError": {
        "description": "No autorizado",
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ApiResponse"
                },
                {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 401
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "ForbiddenError": {
        "description": "Acceso prohibido",
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ApiResponse"
                },
                {
